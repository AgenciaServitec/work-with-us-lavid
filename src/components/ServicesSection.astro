---
import { Icon } from "astro-icon/components"
import { servicesList } from "../data-list/index"
import ContentWidth from "./ContentWidth.astro";
---
<section id="services" class="bg-white py-20">
    <ContentWidth>
      <div class="mt-10 flex justify-center items-center gap-4">
        <div class="w-20 md:w-64 h-[0.1em] bg-gray-400"></div>
        <h2 class="text-5xl font-bold text-center">
          Nuestros <span class="text-orange-500 border-b-4 border-orange-500">Servicios</span>
        </h2>
        <div class="w-20 md:w-64 sm:w-40 h-[0.1em] bg-gray-400"></div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-20 mb-10">
        {servicesList.map((item) => (
          <div class="group relative bg-gray-50 p-6 rounded-2xl shadow hover:shadow-lg transition-all duration-400 overflow-hidden">
            <div class="absolute inset-0 bg-orange-500 rounded-2xl origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-400"></div>
            <div class="relative z-10">
              <div class="flex justify-center items-center mb-10 text-orange-500 text-8xl group-hover:text-white transition-colors duration-300 delay-100">
                <Icon name={item.icon} class="group-hover:rotate-y-180 transition-transform duration-700 ease-in-out" />
              </div>
              <h3 class="text-lg font-semibold text-gray-800 group-hover:text-white transition-colors duration-300 delay-75 text-center">
                {item.service}
              </h3>
              <div class="mt-6 flex justify-center items-center gap-4">
                <div class="w-20 h-[0.1em] bg-gray-400 group-hover:bg-white transition-colors duration-300 delay-100"></div>
                <a href="#contact-us">
                  <button class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-300 group-hover:bg-white group-hover:text-orange-500 transition-all duration-300 delay-100">
                    <Icon name="mdi:arrow-right" class="text-xl"/>
                  </button>
                </a>
                <div class="w-20 h-[0.1em] bg-gray-400 group-hover:bg-white transition-colors duration-300 delay-100"></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </ContentWidth>
</section>

<style>
    .rotate-y-180 {
        transform: rotateY(180deg);
        transform-style: preserve-3d;
    }
</style>