---
import ContentWidth from "./ContentWidth.astro";
import { Icon } from "astro-icon/components";

const navItems = [
  { text: "Inicio", route: "/" },
  { text: "Nosotros", route: "#about-us" },
  { text: "Servicios", route: "#services" },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-gray-100">
  <ContentWidth>
    <div class="flex justify-between items-center py-3 lg:py-4">
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/logo.png"
          class="w-12 md:w-14 h-auto transition-transform duration-300 group-hover:scale-105"
          alt="Logo de Contratista Servicios Generales Asociados"
          loading="eager"
        />
        <span class="hidden md:block text-xl font-bold text-gray-800 group-hover:text-orange-500 transition-colors">
          Servicios Generales
        </span>
      </a>
      <nav class="hidden md:flex">
        <ul class="flex gap-1 lg:gap-2 font-medium">
          {
            navItems.map((nav) => (
              <li class="relative group" >
                <a
                  href={nav.route}
                  class="inline-block px-4 py-3 text-gray-700 hover:text-orange-500 transition-colors duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-orange-400 focus-visible:ring-offset-2 rounded-lg"
                >
                  {nav.text}
                  <span class="absolute bottom-1 left-1/2 transform -translate-x-1/2 h-0.5 w-6 bg-orange-500 scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-center"></span>
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <button
        id="menu-toggle"
        class="md:hidden p-2 rounded-lg text-orange-500 focus:outline-none"
        aria-label="Abrir menÃº"
      >
        <Icon name="mdi:menu" size={32} />
      </button>
      <div class="hidden md:block ml-4">
        <a
          href="#contact-us"
          class="inline-flex items-center justify-center px-5 py-2.5 rounded-lg bg-orange-500 text-white font-medium hover:bg-orange-600 transition-colors shadow-md hover:shadow-lg gap-2"
        >
          <Icon name="mdi:phone-outline" />
          <span>Contacto</span>
        </a>
      </div>
    </div>
    <div
      id="mobile-menu"
      class="md:hidden overflow-hidden transition-all duration-300 max-h-0 opacity-0 text-center"
    >
      {
        navItems.map((nav) => (
          <div class="h-[0.1em] w-full bg-gray-200"/>
          <a
            href={nav.route}
            class="block px-4 py-3 text-gray-700 hover:text-orange-500 font-medium transition-colors"
          >
            {nav.text}
          </a>
        ))
      }
      <div class="h-[0.1em] w-full bg-gray-200"/>
      <a
        href=#contact-us
        class="block px-4 py-3 gap-2 text-orange-700 hover:text-gray-500 font-medium transition-colors>"
      >
        Contacto
      </a>
    </div>
  </ContentWidth>
</header>

<script is:inline>
  const toggleBtn = document.querySelector("#menu-toggle");
  const mobileMenu = document.querySelector("#mobile-menu");

  let isOpen = false;

  toggleBtn?.addEventListener("click", () => {
    isOpen = !isOpen;
    if (isOpen) {
      mobileMenu.classList.remove("max-h-0", "opacity-0");
      mobileMenu.classList.add("max-h-96", "opacity-100");
    } else {
      mobileMenu.classList.remove("max-h-96", "opacity-100");
      mobileMenu.classList.add("max-h-0", "opacity-0");
    }
  });
</script>
